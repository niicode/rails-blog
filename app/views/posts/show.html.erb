<section >
<div class="post-wrapper">
<div>
  <span> <%= @post.title %> By  <%= @post.user.name %> </span>
  <span>
    Comments: <%= @post.comments_counter %> , Likes: <%= @post.likes_counter %>
  </span>
</div>
 <p><%= @post.text %></p>
  <div class="post-btns">
  <%= render'shared/new_like', post: @post %>
</div>
  <ul class="comments-list">
      <% if @post.comments_counter > 0 %>
          <%= render 'shared/comments', comments: @post.comments %>
      <% else %>
        <li>No comments</li>
      <% end %>
      <%= render 'shared/new_comment', post: @post%>
  </ul>
</section>
